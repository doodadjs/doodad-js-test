  "version": "2.1.0",
  "stage": "a",
  "dependencies": [
    {
      "//": "For the package.",
      "name": "doodad-js",
      "client": true,
      "server": true,
      "browserify": true
    },
    {
      "//": "For the package.",
      "name": "doodad-js-io",
      "client": true,
      "server": true,
      "browserify": true
    },

    {
      "//": "For the application",
      "name": "doodad-js-cluster",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-dates",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-http",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-http_jsonrpc",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-locale",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-loader",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-mime",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-minifiers",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-templates",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-terminal",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-widgets",
      "client": false,
      "server": false,
      "browserify": false
    },
    {
      "//": "For the application",
      "name": "doodad-js-xml",
      "client": false,
      "server": false,
      "browserify": false
    }
  ],
  "modules": [
    {
      "//": "For the package.",
      "src": "common/Test.js",
      "client": true,
      "server": true,
      "browserify": true
    },
    {
      "//": "For the application.",
      "src": "server/units/Test_Pages_Units_Index.js",
      "client": false,
      "server": true,
      "browserify": false
    }
  ],
  "resources": [
    {
      "src": "client/units",
      "namespace": "Test.Pages.Units",
      "client": true,
      "server": false,
      "browserify": false
    }
  ],
  "tasks": {
    "ddtx": {
      "operations": [
        {
          "class": "Make.Modules.Load",
          "files": [
            {
              "module": "doodad-js-templates"
            },
            {
              "module": "doodad-js-templates",
              "path": "src/make/Templates_Html_Make.js"
            }
          ]
        },
        {
          "class": "Doodad.Templates.Html.Make.Compile",
          "source": "%SOURCEDIR%/client/units/index.ddt",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/client/units/index.ddtx",
          "variables": {
            "serverSide": true
          }
        }
      ]
    },
    "make": {
      "operations": [
        {
          "class": "Make.Generate.Package"
        },

        {
          "class": "Make.Folder.Create",
          "destination": "%PACKAGEDIR%/widgets"
        },
        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget.js",
          "destination": "%PACKAGEDIR%/widgets/MyWidget.js",
          "runDirectives": true,
          "keepComments": true,
          "keepSpaces": true,
          "variables": {
            "serverSide": true,
            "debug": true
          }
        },
        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget.js",
          "destination": "%PACKAGEDIR%/widgets/MyWidget.min.js",
          "runDirectives": true,
          "variables": {
            "serverSide": true
          }
        },
        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget_loader.js",
          "destination": "%PACKAGEDIR%/widgets/MyWidget_loader.js",
          "runDirectives": true,
          "keepComments": true,
          "keepSpaces": true,
          "variables": {
            "serverSide": true,
            "debug": true
          }
        },
        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget_loader.js",
          "destination": "%PACKAGEDIR%/widgets/MyWidget_loader.min.js",
          "runDirectives": true,
          "variables": {
            "serverSide": true
          }
        },

        {
          "class": "Make.Task",
          "name": "install"
        },
        {
          "class": "Make.Task",
          "name": "browserify"
        },
        {
          "class": "Make.Task",
          "name": "webpack"
        }
      ]
    },
    "install": {
      "operations": [
        {
          "class": "Make.Generate.Package"
        },

        {
          "class": "Make.Folder.Create",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/units"
        },
        {
          "class": "Make.Folder.Create",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets"
        },

        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget.js",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets/MyWidget.js",
          "runDirectives": true,
          "keepComments": true,
          "keepSpaces": true,
          "variables": {
            "debug": true
          }
        },
        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget.js",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets/MyWidget.min.js",
          "runDirectives": true
        },
        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget_loader.js",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets/MyWidget_loader.js",
          "runDirectives": true,
          "keepComments": true,
          "keepSpaces": true,
          "variables": {
            "debug": true
          }
        },
        {
          "class": "Make.File.Javascript",
          "source": "%SOURCEDIR%/common/widgets/MyWidget_loader.js",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets/MyWidget_loader.min.js",
          "runDirectives": true
        },

        {
          "class": "Make.File.Copy",
          "source": "%SOURCEDIR%/client/units/index.ddt",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/units/index.ddt"
        },
        {
          "class": "Make.Folder.Copy",
          "source": "%SOURCEDIR%/client/units/css/",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/units/css/"
        },
        {
          "class": "Make.Folder.Copy",
          "source": "%SOURCEDIR%/client/units/js/",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/units/js/"
        },

        {
          "class": "Make.File.Copy",
          "source": "%SOURCEDIR%/client/widgets/MyWidget.css",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets/MyWidget.css"
        },
        {
          "class": "Make.File.Copy",
          "source": "%SOURCEDIR%/client/widgets/test.html",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets/test.html"
        },
        {
          "class": "Make.File.Copy",
          "source": "%SOURCEDIR%/client/widgets/crossRealm.html",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/widgets/crossRealm.html"
        },

        {
          "class": "Make.Folder.Create",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/browserify"
        },
        {
          "class": "Make.File.Copy",
          "source": "%SOURCEDIR%/browserify/index.html",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/browserify/index.html"
        },
        {
          "class": "Make.Browserify.Bundle",
          "source": "%SOURCEDIR%/browserify/main.js",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/browserify/bundle.min.js",
          "minify": true
        },

        {
          "class": "Make.Folder.Create",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/webpack"
        },
        {
          "class": "Make.File.Copy",
          "source": "%SOURCEDIR%/webpack/index.html",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/webpack/index.html"
        },
        {
          "class": "Make.Webpack.Bundle",
          "source": "%SOURCEDIR%/webpack/main.js",
          "destination": "%INSTALLDIR%/%PACKAGENAME%/webpack/bundle.min.js"
        }
      ]
    },
    "browserify": {
      "operations": [
        {
          "class": "Make.Generate.Package"
        }
      ]
    },
    "webpack": {
      "operations": [
        {
          "class": "Make.Generate.Package"
        }
      ]
    }
  }
}